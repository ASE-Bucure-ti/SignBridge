{
  "name": "signbridge-extension",
  "version": "1.0.0",
  "description": "SignBridge - Generic Web HSM Signing Protocol Browser Extension",
  "private": true,
  "scripts": {
    "build:chrome": "webpack --env target=chrome --mode production",
    "build:firefox": "webpack --env target=firefox --mode production",
    "build": "npm run build:chrome && npm run build:firefox",
    "dev:chrome": "webpack --env target=chrome --mode development --watch",
    "dev:firefox": "webpack --env target=firefox --mode development --watch",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@types/webextension-polyfill": "^0.12.4",
    "copy-webpack-plugin": "^12.0.0",
    "rimraf": "^5.0.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.3.0",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.0"
  }
}
